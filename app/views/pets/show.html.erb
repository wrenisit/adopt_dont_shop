<h1><%= @pet.name %></h1>
  <%= image_tag(@pet.image) %>
  <p> <%= @pet.age %> </p>
  <p> <%= @pet.sex %> </p>
  <p> <%= @pet.description %> </p>
  <p> <%= @pet.shelter.name %></p>
  <p> <%= @pet.adopted %> </p>
  <%= button_to 'Update', "/pets/#{@pet.id}/edit", method: :get %>
  <%= button_to 'Delete', "/pets/#{@pet.id}", method: :delete %>
  
